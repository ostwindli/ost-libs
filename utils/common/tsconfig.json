{
  "compilerOptions": {
    "outDir": "libs",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "allowJs": false,
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "typings.d.ts"],
  "exclude": ["src/**/*.test.ts"]
}
